{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{aluno.avatar_url}})
                    no-repeat center center / cover"></section>

        <section class="details">

            <form method="POST" action="/alunos?_method=PUT">

                <h3>Editar Instrutor</h3>

                {% include 'alunos/fields.njk' %}

                <input type="hidden" name="id" value="{{aluno.id}}">
            </form>

            <form id="form-delete" method="POST" action="/alunos?_method=DELETE">
                <input type="hidden" name="id" value="{{aluno.id}}">
                <button type="submit">Deletar</button>
            </form>

        </section>

    </div>

  <script src="/js/scripts.js"></script>

{% endblock content %}